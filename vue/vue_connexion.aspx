        <label class="margin-label" for="email">Adresse email</label>
        <input type="text" class="form-control champ-email" name="email" id="email"  placeholder="Votre email">
    </div>

    <div class="form-group">
        <label class="margin-label" for="mdp">Mot de passe</label>
